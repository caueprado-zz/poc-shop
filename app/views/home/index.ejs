<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal PicPay Shop</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>

	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="portal_wrapper">
							<a href="item?id=<%= item[0].id%"><img src="images/<%= item[i].imagem%>">"/></a>
							<span class="portal_autor"><%= item[0].user %></span>
							<span class="portal_autor"><%= item[0].user %>R$<%= item[0].valor %></span>
							<span class="portal_data"><%= item[0].quantidade %></span>
		    		</div>
		    	</div>

	    		<div class="col-md-4">
	    			<div class="portal_wrapper">
						<a href="#"><img src="images/<%= item[i].imagem%>">"/></a>
						<span class="portal_autor"><%= item[1].user %></span>
						<a href="item?id=<%= item[1].id %>" class="portal_titulo">R$<%= item[1].valor %></a>
						<span class="portal_data"><%= item[1].quantidade %></span>
					</div>
		    	</div>
	    	</div>

	    	<div class="row">
					<% for(var i = 2; i < item.length; i++) { %>
						<div class="col-md-4">
							<div class="portal_wrapper">
								<a href="#"><img src="images/<%= item[i].imagem%>">"/></a>
								<span class="portal_autor"><%= item[i].user %></span>
								<a href="item?id=<%= item[i].id %>" class="portal_titulo">R$<%= item[i].valor %></a>
								<span class="portal_data"><%= item[i].quantidade %></span>
							</div>
						</div>
					<% } %>
	    	</div> 

	    	<div class="row ver_mais">
	    		<button type="button" class="btn btn-default"><a href="itens">Ver todos</a></button>
	    	</div>

	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>